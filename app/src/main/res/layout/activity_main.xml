<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center|end"
            android:backgroundTint="@color/black"
            android:gravity="end|center"
            android:inputType="number"
            android:paddingHorizontal="10dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_operator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:gravity="center|start"
            android:paddingHorizontal="20dp"
            android:text=""
            android:textColor="#DDDADA"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_output"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center|end"
            android:gravity="center|end"
            android:paddingHorizontal="10dp"
            android:text="0"
            android:textColor="#DDDADA"
            android:textSize="30sp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_gravity="center|end"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:src="@drawable/ic_backspace_24" />


    <GridLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:columnCount="4"
        android:padding="10dp"
        android:rowCount="5">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_AC"
            style="@style/button"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/ripple"
            android:text="AC"
            android:textColor="@color/black"
            app:backgroundTint="@color/graylight"
            app:cornerRadius="100dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_negative"
            style="@style/button"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/ripple"
            app:backgroundTint="@color/graylight"
            android:text="Â±"
            android:textColor="@color/black" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_percent"
            style="@style/button"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/ripple"
            android:text="%"
            android:textColor="@color/black"
            app:backgroundTint="@color/graylight" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_div"
            style="@style/button"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/ripple"
            android:text="/"
            android:textColor="@color/white"
            app:backgroundTint="@color/color_orange" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_7"
            style="@style/button"
            android:layout_row="1"
            android:layout_column="0"
            android:background="@drawable/ripple"
            android:text="7"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_8"
            style="@style/button"
            android:layout_row="1"
            android:layout_column="1"
            android:background="@drawable/ripple"
            android:text="8"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_9"
            style="@style/button"
            android:layout_row="1"
            android:layout_column="2"
            android:background="@drawable/ripple"
            android:text="9"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_multi"
            style="@style/button"
            android:layout_row="1"
            android:layout_column="3"
            android:background="@drawable/ripple"
            android:text="*"
            android:textColor="@color/white"
            app:backgroundTint="@color/color_orange" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_4"
            style="@style/button"
            android:layout_row="2"
            android:layout_column="0"
            android:background="@drawable/ripple"
            android:text="4"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_5"
            style="@style/button"
            android:layout_row="2"
            android:layout_column="1"
            android:background="@drawable/ripple"
            android:text="5"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_6"
            style="@style/button"
            android:layout_row="2"
            android:layout_column="2"
            android:background="@drawable/ripple"
            android:text="6"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_minus"
            style="@style/button"
            android:layout_row="2"
            android:layout_column="3"
            android:background="@drawable/ripple"
            android:text="-"
            android:textColor="@color/white"
            app:backgroundTint="@color/color_orange" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_1"
            style="@style/button"
            android:layout_row="3"
            android:layout_column="0"
            android:background="@drawable/ripple"
            android:text="1"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_2"
            style="@style/button"
            android:layout_row="3"
            android:layout_column="1"
            android:background="@drawable/ripple"
            android:text="2"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_3"
            style="@style/button"
            android:layout_row="3"
            android:layout_column="2"
            android:background="@drawable/ripple"
            android:text="3"
            android:textColor="@color/white" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_plus"
            style="@style/button"
            android:layout_row="3"
            android:layout_column="3"
            android:background="@drawable/ripple"
            android:text="+"
            android:textColor="@color/white"
            app:backgroundTint="@color/color_orange" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_0"
            style="@style/button"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:background="@drawable/roundbutton0"
            android:text="0"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_dot"
            style="@style/button"
            android:layout_row="4"
            android:layout_column="2"
            android:background="@drawable/ripple"
            android:text="."
            android:textColor="@color/white" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_equals"
            style="@style/button"
            android:layout_row="4"
            android:layout_column="3"
            android:background="@drawable/ripple"
            android:text="="
            android:textColor="@color/white"
            app:backgroundTint="@color/color_orange" />


    </GridLayout>


</LinearLayout>